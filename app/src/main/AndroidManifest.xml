<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs217b.ndn_hangman" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CreateGame"
            android:label="@string/title_activity_create_game" >
        </activity>
        <activity
            android:name=".LoadGame"
            android:label="@string/title_activity_load_game" >
        </activity>
        <activity
            android:name=".JoinGameActivity"
            android:label="@string/title_activity_join_game" >
        </activity>
    </application>
</manifest>
